<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:weightSum="1">

        <TextView
            android:layout_width="185dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Single Movie"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.41" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back To Search"
            android:id="@+id/backToSearchButton"
            android:layout_weight="0.23"
            android:onClick="searchPageOnClick" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.52"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieIDTextView"
            android:text="ID"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieTitleTextView"
            android:text="Title"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieYearTextView"
            android:text="Year"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/movieDirectorTextView"
            android:text="Director"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bannerURLTextView"
            android:text="Banner"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trailerURLTextView"
            android:text="Trailer"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listOfGenresLayout"
            android:layout_weight="0.11">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genres: "
                android:id="@+id/listOfGenreTextView"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/listOfStarsLayout"
            android:layout_weight="0.14">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stars: "
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>